{
  "name": "ic-notes",
  "version": "0.0.1",
  "author": {
    "name": "Pat T.",
    "email": "pattad@mail.com",
    "url": "https://github.com/pattad/ic-notes"
  },
  "scripts": {
    "build": "ng build",
    "ng": "ng",
    "prebuild": "npm run copy:types",
    "prestart": "npm run copy:types",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --exclude='*.most' --exclude='*.ts' --delete src/declarations",
    "ng-start": "npm run ng-start-dfx && dfx canister create notes && dfx canister create imgTank && npm run ng-serve && npm run print-ng",
    "ng-serve": "concurrently -k \"npm run ng-watch-motoko\" \"ng serve\"",
    "ng-start-dfx": "dfx stop && dfx start --background",
    "ng-build-notes": "dfx deploy notes && dfx deploy imgTank",
    "ng-watch-motoko": "nodemon --watch src --ext mo -x \"npm run ng-build-notes && npm run print-dfx-www\"",
    "build-dfx-www": "npm run ng-start-dfx && dfx deploy && npm run print-dfx-www",
    "print-dfx-www": "echo local IC server: http://localhost:8000/?canisterId=$(dfx canister id www)",
    "print-ng": "echo local Angular server: http://localhost:4200"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.7",
    "@angular/common": "^14.2.7",
    "@angular/compiler": "^14.2.7",
    "@angular/core": "^14.2.7",
    "@angular/forms": "^14.2.7",
    "@angular/platform-browser": "^14.2.7",
    "@angular/platform-browser-dynamic": "^14.2.7",
    "@angular/router": "^14.2.7",
    "@dfinity/agent": "0.14.0",
    "@dfinity/auth-client": "0.14.0",
    "ngx-editor": "^15.0.1",
    "ngx-spinner": "14.0.0",
    "ngx-image-compress": "^13.1.13",
    "rxjs": "~7.5.5",
    "tslib": "^2.3.0",
    "uuid": "^3.4.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^14.0.1",
    "@angular-devkit/build-angular": "^14.0.4",
    "@angular/cli": "^14.2.6",
    "@angular/compiler-cli": "^14.2.7",
    "@dfinity/candid": "0.14.0",
    "@dfinity/principal": "0.14.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@types/uuid": "^8.3.4",
    "assert": "2.0.0",
    "buffer": "6.0.3",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^9.0.1",
    "events": "3.3.0",
    "html-webpack-plugin": "5.3.1",
    "jasmine-core": "~4.1.1",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^14.2.2",
    "nodemon": "^2.0.12",
    "process": "0.11.10",
    "stream-browserify": "3.0.0",
    "terser-webpack-plugin": "5.1.1",
    "typescript": "~4.7.2",
    "util": "0.12.5",
    "webpack": "5.72.1",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}